# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Copia este archivo a .env y completa con tus credenciales de Supabase
# Obtén estas credenciales desde: https://app.supabase.com/project/_/settings/api

# Supabase Project URL
SUPABASE_URL=https://tu-proyecto.supabase.co

# Supabase Anon Key (para operaciones públicas del cliente)
SUPABASE_ANON_KEY=tu-anon-key-aqui

# Supabase Service Role Key (para operaciones del servidor - NUNCA expongas esto al cliente)
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-aqui

# Database URL (Connection String para Sequelize)
# Formato: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[TU-PASSWORD]@db.[PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# Database URL sin pgbouncer (para migraciones)
DATABASE_URL_DIRECT=postgresql://postgres:[TU-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# =====================================================
# SERVER CONFIGURATION
# =====================================================
PORT=3000
NODE_ENV=development

# =====================================================
# JWT CONFIGURATION
# =====================================================
JWT_SECRET=tu-jwt-secret-super-seguro-cambialo-en-produccion
JWT_EXPIRES_IN=7d

# =====================================================
# CORS CONFIGURATION
# =====================================================
# En desarrollo: http://localhost:5173
# En producción: https://tu-app.vercel.app
CORS_ORIGIN=http://localhost:5173

# =====================================================
# EMAIL CONFIGURATION (Outlook/Office 365)
# =====================================================
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USER=analista.mantenimiento@partequipos.com
EMAIL_PASSWORD=tu-password-de-email
EMAIL_FROM=Soporte Técnico Partequipos <analista.mantenimiento@partequipos.com>

# =====================================================
# FRONTEND URL (para links en emails)
# =====================================================
FRONTEND_URL=http://localhost:5173

# =====================================================
# SUPABASE STORAGE BUCKETS
# =====================================================
# Nombres de los buckets en Supabase Storage
SUPABASE_BUCKET_AVATARS=avatars
SUPABASE_BUCKET_MESSAGES=message-attachments
SUPABASE_BUCKET_REPORTS=report-attachments

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=info

